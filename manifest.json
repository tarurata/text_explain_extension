{
    "manifest_version": 3,
    "name": "Text Explanation Extension",
    "version": "1.0",
    "description": "Get explanations for selected text using ChatGPT.",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "sidePanel",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_icon": "icon.png"
    },
    "side_panel": {
        "default_path": "sidepanel.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "explain.js"
            ]
        }
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "options_page": "options.html"
}